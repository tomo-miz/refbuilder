//- routes.output
//- reference created by queries

extends layout

block content
  h1= title
  p Welcome to #{title}
  
  form(action='/catalog/build', method='post')
    table
      th Include
      th Title
      th Author
      th Publisher
      th Year
      each elem in reference
        tr
          td
            input(type="checkbox" id="checkbox" name="mycheckbox" 
            value=`${[elem.last_name, 
                    elem.first_name, 
                    elem.year,
                    elem.title,
                    elem.publisher]}`)
          td !{elem.title}
          td !{elem.last_name}, !{elem.first_name}
          td !{elem.publisher}
          td !{elem.year}
    button(type='submit' formmethod='post') Submit
